<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#6019F1"/>
            <corners
                android:radius="20dp"/>

        </shape>
    </item>
    <item>
        <shape >
            <gradient
                android:startColor="#C82828"

                android:angle="270"
                android:endColor="#6019F1"/>
            <padding
                android:left="50dp"
                android:right="50dp"
                android:top="10dp"
                android:bottom="10dp"
                />

            <corners
                android:radius="25dp"/>

        </shape>
    </item>


</selector>